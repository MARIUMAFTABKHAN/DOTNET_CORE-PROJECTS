<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Express Tribune</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/plyr@3.7.8/dist/plyr.css" />

    <style>
        body {
            background: linear-gradient(to bottom, #f8fbfe, #eef7fd);
            min-height: 100vh;
        }

        .navbar {
            background: linear-gradient(to right, #38a3fd, #52c3ff);
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .navbar-brand {
            color: white;
            font-weight: bold;
        }

        .nav-link, .btn-logout {
            color: white !important;
            border: 1px solid white;
            border-radius: 20px;
            padding: 5px 15px;
            margin-left: 10px;
        }

        .btn-sky {
            background: #0b68ff;
            color: white;
        }

        .text-sky {
            color: #0b68ff;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid px-4">
            <a class="navbar-brand" href="#">Express Tribune Filtering</a>
            <div class="d-flex ms-auto">
                @if (Context.Session.GetString("User") != null)
                {
                    <span class="text-white me-2">Welcome, @Context.Session.GetString("User")!</span>
                    <form method="post" asp-controller="Login" asp-action="Logout">
                        <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                    </form>
                }
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/plyr@3.7.8/dist/plyr.polyfilled.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
